{% extends 'base.html.twig' %}

{% block title %}Booking
{% endblock %}

{% block body %}
	<h1>Booking</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ booking.id }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ booking.updatedAt ? booking.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ booking.status }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('booking.index') }}">back to list</a>

	<a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>

	{{ include('booking/_delete_form.html.twig') }}
